<%- include("partials/header", {active: "Edit-article"}) %>

<!-- Flash messages code -->

<% if(errors.length > 0) { %>
  <% errors.forEach(error => { %>
    <div class="alert alert-danger">
      <%= error.msg %>
    </div>
  <% }); %>
<% } %>

<section>
  <!-- Edit article -->
  
    <div class="form-style">
      <div class="heading-bubble">
        <h1>Edit Article</h1>
      </div>

      <form class="" action="/articles/edit/<%= article._id %>" method="post">
        <div class="form-group">
          <label>Title</label>
          <input class="form-control" type="text" name="title" value="<%= article.title %>" />
        </div>
        <div class="form-group">
          <label>Post</label>
          <textarea class="form-control" name="content" cols="18" rows="7"><%= article.content %></textarea>
        </div>
        <button
          class="btn btn-md btn-dark btn-margin-top"
          type="submit"
          name="button"
        >
          Publish
        </button>
      </form>
    </div>
  
</section>

<%- include("partials/footer") %>