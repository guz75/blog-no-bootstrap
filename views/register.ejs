<%- include("partials/header", {active: "Register"}) %>
<!-- Registration form -->

<!-- Flash messages code -->

<% if(errors.length > 0) { %>
  <% errors.forEach(error => { %>
    <div class="alert alert-danger">
      <%= error.msg %>
    </div>
  <% }); %>
<% } %>

<div class="row no-gutters">
  <!-- Manual registration -->
  <div class="col-lg-8">
    <div class="form-style">
      <div class="heading-bubble">
        <h1>Please Register</h1>
      </div>
      <form class="" action="/users/register" method="post">
        <div class="form-group">
          <label>Name</label>
          <input class="form-control" type="text" name="name" />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input class="form-control" type="email" name="email" />
        </div>
        <div class="form-group">
          <label>Username</label>
          <input class="form-control" type="text" name="username" />
        </div>
        <div class="form-group">
          <label>Password</label>
          <input class="form-control" type="password" name="password" />
        </div>
        <div class="form-group">
          <label>Confirm Password</label>
          <input class="form-control" type="password" name="password2" />
        </div>
        <div class="form-group">
          <label>Website <em>(optional)</em></label>
          <input class="form-control" type="text" name="website" />
        </div>
        <button
          class="btn btn-md btn-dark btn-margin-top"
          type="submit"
          name="button"
        >
          Register
        </button>
      </form>
    </div>
  </div>
  <!-- Social media register -->
  <div class="col-lg-4">
    <div class="social-style">
      <a class="btn btn-block btn-social btn-facebook">
        <span class="fa fa-facebook"></span> Register with Facebook
      </a>
      <a class="btn btn-block btn-social btn-google">
        <span class="fa fa-google"></span> Register with Google
      </a>
      <a class="btn btn-block btn-social btn-twitter">
        <span class="fa fa-twitter"></span> Register with Twitter
      </a>
    </div>
  </div>
</div>

<%- include ("partials/footer") %>
