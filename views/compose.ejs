<%- include("partials/header") %>

<section>
  <!-- Add article -->
  
    <div class="form-style">
      <div class="heading-bubble">
        <h1>Compose</h1>
      </div>

      <form class="" action="/articles/compose" method="post">
        <div class="form-group">
          <label>Title</label>
          <input class="form-control" type="text" name="title" />
        </div>
        <div class="form-group">
          <label>Post</label>
          <textarea class="form-control" name="content" cols="18" rows="7"></textarea>
        </div>
        <button
          class="btn btn-md btn-dark btn-margin-top"
          type="submit"
          name="button"
        >
          Publish
        </button>
      </form>
    </div>
  
</section>

<%- include("partials/footer") %>
